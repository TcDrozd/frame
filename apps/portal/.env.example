# Core
APP_NAME="Shared Photo Frame Portal"
APP_SECRET_KEY="change-this-secret"

# Auth (local DB users)
# (You will seed an admin user with portalctl)
AUTH_SESSION_TTL_SECONDS=86400

# AWS / S3
AWS_REGION="us-east-1"
S3_BUCKET="trevor-shared-photo-stream"
PHOTOS_PREFIX="photos/original/"
MANIFEST_KEY="manifest.json"

# Publisher script
# Either point to your existing repo script, or vendor it into ./tools and point here.
PUBLISHER_PATH="tools/publish_manifest.py"

# Database
DATABASE_URL="sqlite:///./data/portal.db"

# Behavior
AUTO_PUBLISH_ON_UPLOAD=true
AUTO_BUMP_ON_UPLOAD=true
DEFAULT_BUMP_EXPIRES_HOURS=24
DEFAULT_PIN_EXPIRES_HOURS=6

# Publisher flag defaults (mapped to your script flags in app/services/publish_service.py)
DEFAULT_LIMIT=40
DEFAULT_SHUFFLE_MODE="daily"   # none|random|daily
DEFAULT_MODE="sync"            # inventory|sync
DEFAULT_START_EPOCH="now"      # now|fixed
